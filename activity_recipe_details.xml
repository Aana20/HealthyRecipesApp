<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   android:padding="22dp">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imaginea rețetei -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/imagine_reteta"
            android:layout_marginBottom="16dp" />

        <!-- Titlul rețetei -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titlul_retetei"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <!-- Timpul de pregătire și numărul de porții -->
        <TextView
            android:id="@+id/recipeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timp_de_pregatire"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeServings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cantitate_rezultata"
            android:layout_marginBottom="16dp" />

        <!-- Modul de preparare -->
        <TextView
            android:id="@+id/recipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modul_de_preparare"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Ingrediente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingrediente"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/recipeIngredientsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
        </LinearLayout>
        <!-- Informații nutriționale -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valori_nutritionale_portie"
            android:textStyle="bold" android:textSize="20sp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/recipeCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorii"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proteine"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carbohidrati"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeFats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grasimi"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</ScrollView>
