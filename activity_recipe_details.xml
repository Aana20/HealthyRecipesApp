<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imaginea rețetei -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagine rețetă"
            android:layout_marginBottom="16dp" />

        <!-- Titlul rețetei -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titlul Rețetei"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <!-- Timpul de pregătire și numărul de porții -->
        <TextView
            android:id="@+id/recipeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timp de pregătire: 25 minute"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeServings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantitate rezultată: 4 porții"
            android:layout_marginBottom="16dp" />

        <!-- Modul de preparare -->
        <TextView
            android:id="@+id/recipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modul de preparare"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Ingrediente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/recipeIngredientsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
        </LinearLayout>
        <!-- Informații nutriționale -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valori nutriționale / porție"
            android:textStyle="bold" android:textSize="20sp" android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/recipeCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorii: 105 Kcal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proteine: 4 g"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohidrați: 10 g"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/recipeFats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grăsimi: 6 g"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</ScrollView>
